    <script>
        // --- CONFIG & CONSTANTS ---
        const apiKey = "";
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'fppukis-monitor-2026';

        const ickData = [
            { name: "UMKM Go Digital", target2026: 12, targetPos: 37, type: "physical" },
            { name: "UMKM Ekspor", target2026: 1, targetPos: 7, type: "physical" },
            { name: "Produktivitas >10%", target2026: 2, targetPos: 2, type: "physical" },
            { name: "Akses Pembiayaan", target2026: 1, targetPos: 7, type: "physical" },
            { name: "BM Road to KKI", target2026: 2100000000, type: "money" },
            { name: "BM FESyar/ISEF", target2026: 1100000000, type: "money" },
            { name: "Penjualan KKI", target2026: 3850000000, type: "money" },
            { name: "Penjualan FESyar", target2026: 1100000000, type: "money" }
        ];

        const timelineActivities = [
            { task: "Kurasi UMKM", start: "2026-01-01", end: "2026-03-15" },
            { task: "Road to KKI", start: "2026-05-01", end: "2026-07-31" },
            { task: "FESyar/ISEF", start: "2026-07-15", end: "2026-09-30" },
            { task: "Literasi Syariah", start: "2026-04-01", end: "2026-11-15" },
            { task: "Monitoring Akhir", start: "2026-11-01", end: "2026-12-31" }
        ];

        let currentInsightText = "";
        let currentAudio = null;

        // --- GEMINI API HELPERS ---

        async function fetchGemini(prompt, systemInstruction) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
            const payload = {
                contents: [{ parts: [{ text: prompt }] }],
                systemInstruction: { parts: [{ text: systemInstruction }] }
            };

            let delay = 1000;
            for (let i = 0; i < 5; i++) {
                try {
                    const res = await fetch(url, { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify(payload) });
                    if (!res.ok) throw new Error("API Connection Failed");
                    const data = await res.json();
                    return data.candidates?.[0]?.content?.parts?.[0]?.text;
                } catch (e) {
                    if (i === 4) return "Maaf, sistem sedang sibuk. Mohon coba sesaat lagi.";
                    await new Promise(r => setTimeout(r, delay));
                    delay *= 2;
                }
            }
        }

        async function fetchGeminiTTS(text) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-tts:generateContent?key=${apiKey}`;
            const payload = {
                contents: [{ parts: [{ text: `Say professionally and clearly in Indonesian: ${text.substring(0, 1000)}` }] }],
                generationConfig: {
                    responseModalities: ["AUDIO"],
                    speechConfig: { voiceConfig: { prebuiltVoiceConfig: { voiceName: "Puck" } } }
                }
            };

            try {
                const res = await fetch(url, { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify(payload) });
                const data = await res.json();
                const pcmData = data.candidates?.[0]?.content?.parts?.[0]?.inlineData?.data;
                const sampleRate = parseInt(data.candidates?.[0]?.content?.parts?.[0]?.inlineData?.mimeType.split('rate=')[1]) || 24000;
                return { pcmData, sampleRate };
            } catch (e) {
                return null;
            }
        }

        async function fetchImagen(promptText) {
            const url = `https://generativelanguage.googleapis.com/v1beta/models/imagen-4.0-generate-001:predict?key=${apiKey}`;
            const payload = { instances: [{ prompt: promptText }], parameters: { sampleCount: 1 } };

            try {
                const res = await fetch(url, { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify(payload) });
                const result = await res.json();
                return `data:image/png;base64,${result.predictions[0].bytesBase64Encoded}`;
            } catch (e) {
                console.error("Imagen Error:", e);
                return null;
            }
        }

        function pcmToWav(base64Pcm, sampleRate) {
            const binaryString = atob(base64Pcm);
            const len = binaryString.length;
            const bytes = new Uint8Array(len);
            for (let i = 0; i < len; i++) bytes[i] = binaryString.charCodeAt(i);
            const pcmBuffer = bytes.buffer;

            const wavHeader = new ArrayBuffer(44);
            const view = new DataView(wavHeader);
            const writeString = (offset, string) => {
                for (let i = 0; i < string.length; i++) view.setUint8(offset + i, string.charCodeAt(i));
            };

            writeString(0, 'RIFF');
            view.setUint32(4, 36 + pcmBuffer.byteLength, true);
            writeString(8, 'WAVE');
            writeString(12, 'fmt ');
            view.setUint32(16, 16, true);
            view.setUint16(20, 1, true);
            view.setUint16(22, 1, true);
            view.setUint32(24, sampleRate, true);
            view.setUint32(28, sampleRate * 2, true);
            view.setUint16(32, 2, true);
            view.setUint16(34, 16, true);
            writeString(36, 'data');
            view.setUint32(40, pcmBuffer.byteLength, true);

            const combined = new Uint8Array(wavHeader.byteLength + pcmBuffer.byteLength);
            combined.set(new Uint8Array(wavHeader), 0);
            combined.set(new Uint8Array(pcmBuffer), wavHeader.byteLength);
            return new Blob([combined], { type: 'audio/wav' });
        }

        // --- ACTIONS ---

        async function askGemini(mode) {
            const modal = document.getElementById('ai-modal');
            const content = document.getElementById('ai-content');
            const loader = document.getElementById('ai-content-loader');
            const title = document.getElementById('ai-modal-title');
            const audioControls = document.getElementById('audio-controls');

            modal.classList.remove('hidden');
            content.innerHTML = '';
            loader.classList.remove('hidden');
            audioControls.classList.add('hidden');
            if(currentAudio) { currentAudio.pause(); currentAudio = null; }

            let system = "Anda adalah Konsultan Strategis Senior di Bank Indonesia. Jawaban Anda harus berwibawa, analitis, dan sangat solutif. Gunakan Bahasa Indonesia formal.";
            let prompt = "";

            if (mode === 'scenario_simulator') {
                title.innerText = "Simulator Strategi Agresif";
                prompt = `Data target 2026: ${JSON.stringify(ickData)}. Simulasikan jika anggaran pemasaran digital dinaikkan 50%, apa dampak realistis pada UMKM Go Digital dan UMKM Ekspor? Berikan 3 poin analisis.`;
            } else if (mode === 'timeline_risk') {
                title.innerText = "Manajemen Risiko Jadwal";
                prompt = `Jadwal kegiatan: ${JSON.stringify(timelineActivities)}. Identifikasi periode paling berisiko terjadinya 'burnout' tim atau bentrok logistik. Berikan solusi preventif.`;
            } else if (mode === 'innovative_ideas') {
                title.innerText = "Generator Inovasi 2026";
                prompt = `Berdasarkan perbandingan tahun 2025 ke 2026, berikan 1 ide inovatif yang mengintegrasikan teknologi blockchain atau AI untuk UMKM Kalimantan Tengah agar target ekspor Rp 8 Miliar lebih mudah tercapai.`;
            } else if (mode === 'quick_summary') {
                title.innerText = "Executive Strategic Brief";
                prompt = `Berikan ringkasan eksekutif dalam 100 kata mengenai prioritas utama FPPUKIS 2026 agar pimpinan dapat mengambil keputusan cepat.`;
            }

            try {
                const text = await fetchGemini(prompt, system);
                currentInsightText = text;
                content.innerHTML = text.replace(/\*\*(.*?)\*\*/g, '<b class="text-slate-900">$1</b>').replace(/\n/g, '<br>');
                audioControls.classList.remove('hidden');
            } catch (e) {
                content.innerHTML = "Gagal memproses analisis AI.";
            } finally {
                loader.classList.add('hidden');
            }
        }

        async function speakInsight() {
            if (currentAudio) {
                if (!currentAudio.paused) {
                    currentAudio.pause();
                    document.getElementById('play-icon').innerText = '‚ñ∂';
                    document.getElementById('audio-visualizer').classList.add('hidden');
                    return;
                } else {
                    currentAudio.play();
                    document.getElementById('play-icon').innerText = '‚è∏';
                    document.getElementById('audio-visualizer').classList.remove('hidden');
                    return;
                }
            }

            const icon = document.getElementById('play-icon');
            const visualizer = document.getElementById('audio-visualizer');
            
            icon.innerText = '‚åõ';
            const result = await fetchGeminiTTS(currentInsightText);
            
            if (result && result.pcmData) {
                const blob = pcmToWav(result.pcmData, result.sampleRate);
                currentAudio = new Audio(URL.createObjectURL(blob));
                currentAudio.play();
                icon.innerText = '‚è∏';
                visualizer.classList.remove('hidden');
                currentAudio.onended = () => { icon.innerText = '‚ñ∂'; visualizer.classList.add('hidden'); };
            } else {
                icon.innerText = '‚ùå';
            }
        }

        async function generateVisonPoster() {
            const container = document.getElementById('vision-poster-container');
            const placeholder = document.getElementById('vision-image-placeholder');
            container.classList.remove('hidden');
            placeholder.innerHTML = '<div class="spinner border-white/20 border-left-white"></div><p class="ml-4 font-medium animate-pulse text-white">Gemini Imagen 4 sedang melukis visi Anda...</p>';
            
            const prompt = "A futuristic 3D cinematic visualization of a traditional Kalimantan UMKM (small business) going global, digital connections, world map background, professional lighting, Indonesian Bank office vibe, 4k high quality, symbol of success and growth.";
            
            const imageUrl = await fetchImagen(prompt);
            if (imageUrl) {
                placeholder.innerHTML = `<img src="${imageUrl}" class="w-full h-full object-cover rounded-2xl shadow-xl" alt="Vision 2026">`;
            } else {
                placeholder.innerHTML = `<div class="p-8 text-white">Gagal memuat visual. Imagen 4 mungkin sedang sibuk.</div>`;
            }
        }

        // --- CHATBOT LOGIC ‚ú® ---
        function toggleChatbot() {
            document.getElementById('chatbot-window').classList.toggle('open');
        }

        async function sendChatMessage() {
            const input = document.getElementById('chat-input');
            const messages = document.getElementById('chat-messages');
            const text = input.value.trim();
            if (!text) return;

            // Add User Message
            messages.innerHTML += `<div class="flex justify-end"><div class="bg-slate-900 text-white p-3 rounded-2xl rounded-tr-none max-w-[80%]">${text}</div></div>`;
            input.value = '';
            messages.scrollTop = messages.scrollHeight;

            // Get AI Response
            const system = "Anda adalah Konsultan Pintar FPPUKIS 2026. Jawab pertanyaan dengan singkat, padat, dan akurat berdasarkan konteks dashboard.";
            const response = await fetchGemini(`Pertanyaan User: ${text}. Data Konteks ICK: ${JSON.stringify(ickData)}`, system);
            
            // Add AI Message
            messages.innerHTML += `<div><div class="bg-white p-3 rounded-2xl rounded-tl-none border border-slate-200 shadow-sm max-w-[80%]">${response}</div></div>`;
            messages.scrollTop = messages.scrollHeight;
        }

        function closeAIModal() {
            document.getElementById('ai-modal').classList.add('hidden');
            if(currentAudio) { currentAudio.pause(); currentAudio = null; }
        }

        // --- UI & CHART LOGIC ---
        function toggleMobileMenu() {
            const sidebar = document.querySelector('aside');
            sidebar.classList.toggle('hidden');
            sidebar.classList.toggle('flex');
            sidebar.classList.toggle('fixed');
            sidebar.classList.toggle('inset-0');
            sidebar.classList.toggle('w-full');
        }

        function navigate(viewId) {
            ['dashboard', 'timeline', 'comparison'].forEach(id => {
                document.getElementById('view-' + id).classList.add('hidden');
                document.getElementById('nav-' + id).classList.remove('active');
            });
            document.getElementById('view-' + viewId).classList.remove('hidden');
            document.getElementById('nav-' + viewId).classList.add('active');
        }

        function initCharts() {
            const fCtx = document.getElementById('financeChart').getContext('2d');
            new Chart(fCtx, {
                type: 'bar',
                data: {
                    labels: ['BM KKI', 'BM FESyar', 'Jual KKI', 'Jual FESyar'],
                    datasets: [{
                        data: [2.1, 1.1, 3.85, 1.1],
                        backgroundColor: ['#10b981', '#34d399', '#f59e0b', '#fbbf24'],
                        borderRadius: 8
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
            });

            const uCtx = document.getElementById('umkmChart').getContext('2d');
            new Chart(uCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Go Digital', 'Ekspor', 'Produktivitas', 'Pembiayaan'],
                    datasets: [{
                        data: [12, 1, 2, 1],
                        backgroundColor: ['#3b82f6', '#818cf8', '#f43f5e', '#10b981'],
                        borderWidth: 0
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, cutout: '75%' }
            });

            const tCtx = document.getElementById('timelineChart').getContext('2d');
            new Chart(tCtx, {
                type: 'bar',
                data: {
                    labels: timelineActivities.map(t => t.task),
                    datasets: [{
                        data: timelineActivities.map(t => [new Date(t.start).getMonth() + 0.5, new Date(t.end).getMonth() + 0.5]),
                        backgroundColor: '#d97706',
                        borderRadius: 20
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: { x: { min: 0, max: 12, ticks: { callback: v => ['Jan','Feb','Mar','Apr','Mei','Jun','Jul','Agu','Sep','Okt','Nov','Des'][Math.floor(v)] } } },
                    plugins: { legend: { display: false } }
                }
            });
        }

        document.addEventListener('DOMContentLoaded', () => {
            initCharts();
            navigate('dashboard');
        });
    </script>
</body>
</html>
